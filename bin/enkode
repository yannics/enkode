	then
	    echo "Events send to $rip:$rport as /enkode $name ~e data"
	    > $workDir/.tmp$START/spec
	elif [ $rport == 0 ]
	then
	    echo "Events send to $sip:$sport as /spectrum $name ~e data"
	else
	    echo "Events send to $rip:$rport as /enkode $name ~e data"
	    echo "and to $sip:$sport as /spectrum $name ~e data"
	fi
