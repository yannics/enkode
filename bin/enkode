    if [ $Ftextgrid != 1 ] 
    then
	echo "LoudnessMinThres:$minltt [ < $nextmin ]" >> $workDir/$name/.info
	echo "LoudnessMaxThres:$maxltt [ > $nextmax ]" >> $workDir/$name/.info
	echo "[ min:$mindiff | $prevdiff < ] LoudnessDiffThres:$dltt [ < $nextdiff | max:$maxdiff ] " >> $workDir/$name/.info
